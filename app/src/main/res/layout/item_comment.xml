<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civAvatarComment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:src="@drawable/ic_logo"
        app:civ_border_color="@color/colorMain3"
        app:civ_border_width="1dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/civAvatarComment"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/civAvatarComment"
        android:background="@drawable/shape_corner_gradient2_10dp"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tvUserComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/comfortaa"
            android:text="@string/tvUserCommentName"
            android:textColor="@color/colorLight7"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTimeComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvUserComment"
            android:layout_alignBottom="@+id/tvUserComment"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tvUserComment"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:text="@string/tvTimeComment"
            android:textAlignment="center"
            android:textColor="@color/colorLight7"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvContentComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserComment"
            android:layout_alignStart="@+id/tvUserComment"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/comfortaa"
            android:lineSpacingExtra="6dp"
            android:text="@string/tvContentComment"
            android:textColor="@color/colorLight7"
            android:textSize="14sp"
            android:textStyle="normal" />
    </RelativeLayout>
</RelativeLayout>